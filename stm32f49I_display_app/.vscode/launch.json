{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Cortex-Debug (OpenOCD) - Debug",
      "type": "cortex-debug",
      "request": "launch",
      "servertype": "openocd",
      "showDevDebugOutput": "raw",
      "cwd": "${workspaceFolder}",
      "executable": "${workspaceFolder}/target/thumbv7em-none-eabihf/debug/stm32f49I_display_app",
      "device": "STM32F429ZI",
      "configFiles": ["interface/stlink.cfg", "target/stm32f4x.cfg"],
      "preLaunchTask": "cargo build (embedded debug)",
      "postLaunchCommands": [
        "source ${workspaceFolder}/gdb-fault-inspection.gdb"
      ],
      "runToEntryPoint": "main",
      "sourceDirectories": ["${workspaceFolder}/src"],
      "svdFile": "${workspaceFolder}/STM32F429.svd"
    },
    {
      "name": "Cortex-Debug (OpenOCD) - Debug (no build)",
      "type": "cortex-debug",
      "request": "launch",
      "servertype": "openocd",
      "showDevDebugOutput": "raw",
      "cwd": "${workspaceFolder}",
      "executable": "${workspaceFolder}/target/thumbv7em-none-eabihf/debug/stm32f49I_display_app",
      "device": "STM32F429ZI",
      "configFiles": ["interface/stlink.cfg", "target/stm32f4x.cfg"],
      "postLaunchCommands": [
        "source ${workspaceFolder}/gdb-fault-inspection.gdb"
      ],
      "runToEntryPoint": "main",
      "sourceDirectories": ["${workspaceFolder}/src"],
      "svdFile": "${workspaceFolder}/STM32F429.svd"
    },
    {
      "name": "Cortex-Debug (OpenOCD) - Release",
      "type": "cortex-debug",
      "request": "launch",
      "servertype": "openocd",
      "showDevDebugOutput": "raw",
      "cwd": "${workspaceFolder}",
      "executable": "${workspaceFolder}/target/thumbv7em-none-eabihf/release/stm32f49I_display_app",
      "device": "STM32F429ZI",
      "configFiles": ["interface/stlink.cfg", "target/stm32f4x.cfg"],
      "preLaunchTask": "cargo build (embedded release)",
      "postLaunchCommands": [
        "source ${workspaceFolder}/gdb-fault-inspection.gdb"
      ],
      "runToEntryPoint": "main",
      "sourceDirectories": ["${workspaceFolder}/src"],
      "svdFile": "${workspaceFolder}/STM32F429.svd"
    }
    {
      "name": "Cortex-Debug (External OpenOCD :3333)",
      "type": "cortex-debug",
      "request": "launch",
      "servertype": "external",
      "showDevDebugOutput": "raw",
      "cwd": "${workspaceFolder}",
      "executable": "${workspaceFolder}/target/thumbv7em-none-eabihf/debug/stm32f49I_display_app",
      "device": "STM32F429ZI",
      "gdbTarget": "localhost:3333",
      "preLaunchTask": "cargo build (embedded debug)",
      "postAttachCommands": [
        "monitor halt",
        "source ${workspaceFolder}/gdb-fault-inspection.gdb"
      ],
      "runToEntryPoint": "main",
      "sourceDirectories": ["${workspaceFolder}/src"],
      "svdFile": "${workspaceFolder}/STM32F429.svd"
    }
  ]
}
